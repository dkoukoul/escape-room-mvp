{
  "name": "escape-room-mvp",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "concurrently \"bun run dev:server\" \"bun run dev:client\"",
    "dev:server": "bun --watch src/server/index.ts",
    "dev:client": "vite --port 5173",
    "build": "vite build",
    "start": "NODE_ENV=production bun src/server/index.ts",
    "typecheck": "bunx tsc --noEmit",
    "test": "bun test"
  },
  "dependencies": {
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "yaml": "^2.7.0",
    "chokidar": "^4.0.3"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "vite": "^6.1.0",
    "concurrently": "^9.1.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}